// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Home page hero component
model news {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  title String
  content String
  link String?
  video String?
}

// Newsletter pdf component
model newsletter {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  date String
  title String
  doc String
  index Int @unique
}

// Calendar news component
model calendar {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  title String
  content String
  link String?
  video String?
}

// Soup Suppers image component
model suppers {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  doc String
}

// Blog component
model blog {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  date String
  title String
  content String
  img String?
  link String?
}

// Pantry Calendar component
model pantrycalendar {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  doc String
}

// News Item component
model newsitem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  doc String
}

// Pantry Needs component
model needs {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  item0 String?
  item1 String?
  item2 String?
  item3 String?
  item4 String?
  item5 String?
  item6 String?
  item7 String?
  item8 String?
  item9 String?
}

// Testimonies Item component
model testimonies {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  doc String
  content String
}

// Admins
model admins {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
}
