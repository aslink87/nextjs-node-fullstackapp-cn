// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Home page hero component
model news {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  title String
  content String
  link String?
  video String?
}

// Newsletter pdf component
model newsletter {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  date String
  title String
  doc String
}

// Calendar news component
model calendar {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  title String
  content String
  link String?
  video String?
}

// Soup Suppers image component
model suppers {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  index Int @unique
  doc String
}

// Blog component
model blog {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  date String
  title String
  content String
  img String?
  link String?
}
